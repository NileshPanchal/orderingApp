<div class="row">
  <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
    <h1>Customers :- </h1>
    <table class="table table-striped">
      <thead>
          <tr>
            <th style="width: 30%;">Customer Name</th>
            <th style="width: 20%;">View Order Details</th>
          </tr>
      </thead>
      <tbody>
        <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.name %></td>
            <td><%= link_to "View Order Details", customer_details_path(customer.id) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<div class="row">
  <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
    <%= link_to "Home", "/" %>
  </div>
</div>